@page "{messageId:int?}"
@model MessageB.Pages.Message.AddNewPostModel
@{
    ViewData["Title"] = "Add New Message";
}

<h2>Add New Post</h2>
<form method="post">
    
    <div class="form-group">
        <label asp-for="M.Name" ></label>
        <input asp-for="M.Name" class="form-control"/>
    </div>

    

    <div class="form-group">
        <label asp-for="M.messageBody" ></label>
        <input asp-for="M.messageBody" placeholder="Add a Post" class="form-control" />

    </div>

    <div class="form-group">
        <label asp-for="M.Date" ></label>
        <input asp-for="M.Date" class="form-control"/>
    </div>

    <div class="form-group">
        <button  type="submit"  class="btn btn-primary" >Post</button>
    </div>


</form>

